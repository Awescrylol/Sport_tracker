<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_training">

    <fragment
        android:id="@+id/navigation_progress"
        android:name="com.example.sporttracker.ui.ProgressFragment"
        android:label="@string/title_progress"
        tools:layout="@layout/progress_fragment" />

    <fragment
        android:id="@+id/navigation_training"
        android:name="com.example.sporttracker.ui.TrainingFragment"
        android:label="@string/title_training"
        tools:layout="@layout/training_fragment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.sporttracker.ui.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/profile_fragment" />
</navigation>